{
  "manifest_version": 3,
  "name": "To-Doer",
  "version": "1.0",
  "description": "Stay organized and boost productivity with To-Doer: your simple task management tool.",
  "short_description": "A simple to-do list extension",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["activeTab"]
}
